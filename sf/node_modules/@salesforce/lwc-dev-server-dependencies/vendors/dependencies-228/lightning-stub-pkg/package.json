{
    "name": "lightning-components-stubs",
    "version": "0.3.2",
    "description": "Lightning component stubs and real components to use in Jest unit tests",
    "keywords": [
        "LWC",
        "Lightning Web Components",
        "Lightning",
        "Testing"
    ],
    "license": "MIT",
    "files": [
        "modules",
        "scripts",
        "package.json"
    ],
    "scripts": {
        "build": "yarn generate-mocks && yarn format",
        "clean": "rm -rf node_modules && yarn clean-mocks",
        "clean-mocks": "cd modules/lightning-stubs/core && rm -rf -- */ && cd ../../lightning-stubs/platform && rm -rf -- */",
        "lint": "eslint modules/ customMocks/",
        "format": "prettier --write '**/*.{js,json,md,html,css}'",
        "generate-mocks": "node ./scripts/generate-lightning-mocks.js",
        "prepublishOnly": "yarn build && node ./scripts/check-uncommitted.js"
    },
    "dependencies": {
        "fs-extra": "^7.0.1"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint",
        "*.{js,json,md,html,css}": "prettier --write"
    }
}